#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	int t,i,n;
	cin>>t;
	while(t--)
	{
	     cin>>n;
	     int *a=new int[n];
	     for(i=0;i<n;i++)
	     cin>>a[i];
	     int maxvalue,ind;
	     maxvalue=a[0];
	     ind=0;
	     for(i=1;i<n;i++)
	     {
	         if(a[i]>maxvalue)
	         {
	              maxvalue=a[i];
	              ind=i;
	         }
	     }
	     //cout<<maxvalue<<" "<<ind<<endl;
	     int sum=0,max2=a[0],x;
	     
	     for(i=0;i<ind;i++)
	     {
	         if(a[i]>max2)
	          max2=a[i];
	          x=min(max2,maxvalue);
	          sum+=x-a[i];
	         // cout<<max2<<" "<<maxvalue<<" " <<x<<" "<<sum;
	          
	     }
	     max2=a[n-1];
	     for(i=n-1;i>ind;i--)
	     {
	          if(a[i]>max2)
	          max2=a[i];
	          x=min(max2,maxvalue);
	          sum+=x-a[i];
	          // cout<<max2<<" "<<maxvalue<<" " <<x<<" "<<sum;
	     }
	     cout<<sum<<endl;
	}
	return 0;
}
