difference between two consecutive bit there is only one bit difference

#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int count;

int fun(int n,string s[])
{
     if(n==1)
     {
         s[0]="0";
         s[1]="1";
         return 2;
     }
     int c=fun(n-1,s);
     int k,i;
     k=c;
     for(i=c-1;i>=0;i--)
     {
          s[k]= "1"+s[i];
          k++;
     }
     for(i=0;i<c;i++)
     {
          s[i]="0"+s[i];
     }
     return 2*c;
}

int main() {
     int n,i;
     cin>>n;
     int p=pow(2,n);
     string s[p];
     int c=fun(n,s);
     for(i=0;i<c;i++)
     cout<<s[i]<<endl;
     return 0;
}
