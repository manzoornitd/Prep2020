int main() {
	int i ,j ,k,n,sum;
	cin>>n>>k;
	int a[n];
	for(i=0;i<n;i++)
	{
	     cin>>a[i];
	}
	i=0;
	j=1;
	sum=0;
	while( j<n)
	{
	     if(a[j]-a[i]==k)
	     {
	          sum++;
	          i++;
	          if(i==j)
	          j=i+1;
	     }
	     else if(a[j]-a[i]>k)
	     {
	          i++;
	          if(i==j)
	          j=i+1;
	     }
	     else if(a[j]-a[i]<k)
	     j++;
	}
	cout<<sum;
	return 0;
}
