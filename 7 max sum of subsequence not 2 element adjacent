#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int fun(int a[],int n,int dp[])
{
     int i;
     dp[0]=max(0,a[0]);
     dp[1]=max(0,a[1]);
     for(i=2;i<n;i++)
     { 
          
          dp[i]=max((a[i]+dp[i-2]),dp[i-1]);
          dp[i]=max(dp[i],dp[i-2]);
     }
     return dp[n-1];
}

int main() {
	int i,n;
	cin>>n;
	int a[n];
	for(i=0;i<n;i++)
	{
	     cin>>a[i];
	}
	int dp[n];
	cout<<fun(a,n,dp);
	return 0;
}
