given a 2d array of gold ,miner can start from anywhere and can only move to right,rightup right down ,
print max gold
#include <iostream>
#include <bits/stdc++.h>
using namespace std;

void fun(vector <vector<int>> &v,int r,int c)
{
    int dp[r][c];
    int i,j;
  for(i=0;i<r;i++)
  {
       dp[i][c-1]=v[i][c-1];
  }
  for(i=c-2;i>=0;i--)
  {
       int k;
       for(j=1;j<r-1;j++)
       {
            k= max(dp[j-1][i+1],dp[j+1][i+1]);
            k=max(k,dp[j][i+1]);
            dp[j][i]=v[j][i] +k;
       }
       dp[0][i]= v[0][i] + max(dp[1][i+1],dp[0][i+1]);
       dp[r-1][i]=v[r-1][i] + max(dp[r-2][i+1],dp[r-1][i+1]);
  }
  int ma=0;
  for(i=0;i<r;i++)
  {
       if(dp[i][0]>ma)
       ma=dp[i][0];
  }
    cout<<ma;
     return ;
}

int main() {
	int r,c,i,j;
	cin>>r>>c;
     vector <vector <int>> v;
	for(i=0;i<r;i++)
	{   vector <int > st;
	    int x;
	     for(j=0;j<c;j++)
	     {
	     cin>>x;
	     st.push_back(x);
	          
	     }
	     v.push_back(st);
	}
	fun(v,r,c);
	return 0;
}
